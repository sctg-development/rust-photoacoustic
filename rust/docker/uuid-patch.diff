+#include "uuidP.h"
+#include <string.h>
+
+void uuid_dec_le(const unsigned char *src, uuid_t uu)
+{
+    uint8_t *dst = uu;
+
+    /* time_low (bytes 0-3) - convert from little-endian to big-endian */
+    dst[0] = src[3];
+    dst[1] = src[2];
+    dst[2] = src[1];
+    dst[3] = src[0];
+
+    /* time_mid (bytes 4-5) - convert from little-endian to big-endian */
+    dst[4] = src[5];
+    dst[5] = src[4];
+
+    /* time_hi_and_version (bytes 6-7) - convert from little-endian to big-endian */
+    dst[6] = src[7];
+    dst[7] = src[6];
+
+    /* clock_seq and node (bytes 8-15) - remain in big-endian */
+    memcpy(dst + 8, src + 8, 8);
+}
