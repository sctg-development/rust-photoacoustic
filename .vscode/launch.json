{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rust_photoacoustic (web)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_photoacoustic",
                    "--package=rust_photoacoustic"
                ],
                "filter": {
                    "name": "rust_photoacoustic",
                    "kind": "bin"
                }
            },
            "args": ["--web"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rust_photoacoustic (custom)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_photoacoustic",
                    "--package=rust_photoacoustic"
                ],
                "filter": {
                    "name": "rust_photoacoustic",
                    "kind": "bin"
                }
            },
            "args": ["--server", "--web-address=127.0.0.1", "--web-port=8888", "--frequency=2000", "--bandwidth=100"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "debug"
            },
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rust_photoacoustic (config)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_photoacoustic",
                    "--package=rust_photoacoustic"
                ],
                "filter": {
                    "name": "rust_photoacoustic",
                    "kind": "bin"
                }
            },
            "args": ["--server", "--config", "${workspaceFolder}/config.yaml", "-v"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "debug"
            },
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug noise_generator",
            "cargo": {
                "args": [
                    "build",
                    "--bin=noise_generator",
                    "--package=rust_photoacoustic"
                ],
                "filter": {
                    "name": "noise_generator",
                    "kind": "bin"
                }
            },
            "args": ["-o", "test_noise.wav", "-d", "2", "-s", "48000", "-a", "0.8", "-c", "2"],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "debug"
            },
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--test", 
                    "rs256_jwt_test",
                    "test_rs256_jwt_token_generation_and_validation"
                ],
                "filter": {
                    "name": "rust_photoacoustic",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "terminal": "console"
        }
    ]
}
