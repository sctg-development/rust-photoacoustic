{
  "$schema": "http://json-schema.org/draft-2020-12/schema",
  "type": "object",
  "properties": {
    "visualization": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65534
        },
        "address": {
          "type": "string",
          "anyOf": [
            {
              "format": "ipv4"
            },
            {
              "format": "ipv6"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "cert": {
          "type": [
            "string",
            "null"
          ]
        },
        "key": {
          "type": [
            "string",
            "null"
          ]
        },
        "hmac_secret": {
          "type": "string",
          "description": "HMAC secret for JWT token signing"
        }
      },
      "required": [
        "port",
        "address",
        "name"
      ]
    }
  },
  "required": [
    "visualization"
  ]
}